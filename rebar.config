%% -*- mode: Erlang; fill-column: 80; comment-column: 75; -*-

%% Compiler Options ============================================================
{erl_opts,
 [debug_info,
  warnings_as_errors]}.

%% EUnit =======================================================================
{eunit_opts, [verbose,
              {report, {eunit_surefire, [{dir, "."}]}}]}.

{cover_enabled, true}.
{cover_print_enabled, true}.

%% Misc =======================================================================
{post_hooks,
 [{compile, "c_src/build.sh"},
  {clean, "c_src/clean.sh"}]}.
